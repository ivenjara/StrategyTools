<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <Id>230ca798-68dc-47d5-b85b-48cea619fc4b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Nightshift</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Nightshift"/>
  <Description DefaultValue="Slide layout tools that work the night shift so you don't have to"/>
  <IconUrl DefaultValue="https://ivenjara.github.io/StrategyTools/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://ivenjara.github.io/StrategyTools/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://localhost:3000"/>

  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
    <AppDomain>https://ivenjara.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Presentation"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Presentation">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="NightshiftGroup">
                <Label resid="NightshiftGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="ShowTaskPaneBtn">
                  <Label resid="ShowTaskPane.Label"/>
                  <Supertip>
                    <Title resid="ShowTaskPane.Label"/>
                    <Description resid="ShowTaskPane.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>NightshiftPane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://ivenjara.github.io/StrategyTools/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://ivenjara.github.io/StrategyTools/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://ivenjara.github.io/StrategyTools/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://localhost:3000"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="NightshiftGroup.Label" DefaultValue="Nightshift"/>
        <bt:String id="ShowTaskPane.Label" DefaultValue="Nightshift"/>
        <bt:String id="GetStarted.Title" DefaultValue="Nightshift"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ShowTaskPane.Tooltip" DefaultValue="Open the Nightshift panel"/>
        <bt:String id="GetStarted.Description" DefaultValue="Click the Nightshift button on the Home tab to get started."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
